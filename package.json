  "license": "MIT",
  "private": false,
  "dependencies": {
    "db-migrate": "^0.11.5",
    "db-migrate-pg": "^0.4.0",
    "dotenv": "^6.2.0",
    "inversify": "^5.0.1",
    "koa": "^2.6.2",
    "koa-json": "^2.0.2",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "pg": "^7.7.1",
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/koa": "^2.0.48",
    "@types/koa-json": "^2.0.18",
    "@types/koa-router": "^7.0.37",
    "@types/koa-static": "^4.0.0",
    "@types/pg": "^7.4.11",
    "nodemon": "^1.18.9",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "scripts": {
    "migrate": "db-migrate up",
    "dev": "yarn dev-dotenv && yarn dev-db && yarn migrate",
    "dev-dotenv": "cp -n .env.example .env || :",
    "dev-db": "(docker start yip_postgres || docker run --rm --name yip_postgres -e POSTGRES_PASSWORD=postgres -p 5605:5432 -d postgres) && sleep 3",
    "clean-build": "rm -rf build",
    "build-typescript": "tsc -p . --outDir ./build",
    "build": "yarn clean-build && yarn build-typescript",
    "watch-typescript": "tsc -p . --outDir ./build --watch --pretty",
    "watch-server": "nodemon server.js",
    "watch": "yarn clean-build && yarn build-typescript && (yarn watch-typescript & yarn watch-server)",
    "lint": "tslint -c tslint.json -p .",
    "test-all": "yarn lint"
  }
}
